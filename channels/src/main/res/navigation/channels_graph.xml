<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/channels_graph"
    app:startDestination="@id/fragment_channels_base">

    <fragment
        android:id="@+id/fragment_channels_base"
        android:name="com.coolhabit.mocktv.channels.presentation.base.ChannelsBaseFragment"
        tools:layout="@layout/fragment_channels_base">
        <action
            android:id="@+id/open_tv_stream"
            app:destination="@id/stream_graph">
            <argument
                android:name="channel"
                app:argType="com.coolhabit.mocktv.baseUI.model.TvChannelUI" />
        </action>
    </fragment>

    <include app:graph="@navigation/stream_graph" />
</navigation>